@model IdentityServer8.Models.ModelViewModels.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Register";
    var returnUrl = Model.ReturnUrl;
}

<div class="container__register">
    <form asp-action="Register" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ReturnUrl)

        <h2 class="register__title">Sign up to socialRepeat</h2>

        <div class="form-group register__name__fn">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="First name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group register__name__ln">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Email" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group register__pas">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button class="register__signup btn btn-primary" type="submit">Create new account</button>
        <a class="btn btn-link register__backLogin" asp-action="Login" asp-route-returnUrl="@returnUrl">
            Back to login
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}